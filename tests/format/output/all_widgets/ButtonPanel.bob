<display version="2.0.0">
  <name>ButtonPanel</name>
  <x>0</x>
  <y use_class="true">0</y>
  <width>274</width>
  <height>54</height>
  <grid_step_x>4</grid_step_x>
  <grid_step_y>4</grid_step_y>
  <widget type="label" version="2.0.0">
    <name>Title</name>
    <class>TITLE</class>
    <text>ButtonPanel</text>
    <x use_class="true">0</x>
    <y use_class="true">0</y>
    <width>274</width>
    <height>26</height>
    <font use_class="true">
      <font name="Header 1" family="Liberation Sans" style="BOLD" size="22.0">
      </font>
    </font>
    <foreground_color use_class="true">
      <color name="Text" red="0" green="0" blue="0">
      </color>
    </foreground_color>
    <transparent use_class="true">true</transparent>
    <horizontal_alignment>1</horizontal_alignment>
  </widget>
  <widget type="label" version="2.0.0">
    <name>Label</name>
    <text>Button Panel</text>
    <x>22</x>
    <y>30</y>
    <width>120</width>
    <height>20</height>
    <tooltip>One-or-more buttons that poke a PV with a value</tooltip>
  </widget>
  <widget type="action_button" version="3.0.0">
    <name>WritePV</name>
    <pv_name>$(P)$(R)ButtonPanel</pv_name>
    <actions>
      <action type="write_pv">
        <pv_name>$(pv_name)</pv_name>
        <value>0</value>
        <description>$(name)</description>
      </action>
    </actions>
    <text>Stop</text>
    <x>146</x>
    <y>30</y>
    <width>60</width>
    <height>20</height>
    <tooltip>$(P)$(R)ButtonPanel = 0
$(pv_value)</tooltip>
  </widget>
  <widget type="action_button" version="3.0.0">
    <name>WritePV</name>
    <pv_name>$(P)$(R)ButtonPanel</pv_name>
    <actions>
      <action type="write_pv">
        <pv_name>$(pv_name)</pv_name>
        <value>1</value>
        <description>$(name)</description>
      </action>
    </actions>
    <text>Start</text>
    <x>210</x>
    <y>30</y>
    <width>60</width>
    <height>20</height>
    <tooltip>$(P)$(R)ButtonPanel = 1
$(pv_value)</tooltip>
  </widget>
</display>
